
@{
    ViewBag.Title = "Index";
}

<h2>Mensaje</h2>


<p>De: @ViewBag.NombreRemitente</p>
<p>Fecha: @ViewBag.Fecha</p>
<p>Mensaje:</p>
<p>@ViewBag.Mensaje</p>

<form method="POST">
    <h2>Responder a @ViewBag.NombreRemitente</h2>
    
    <label for="asunto">Asunto: </label>
    <input type="text" name="asunto" value="" /> <!--En value debe ir el VIEW DATA-->
    <br />

    <label for="mensaje">Mensaje: </label>
    <textarea id="private_message" cols="100" rows="10" name="mensaje"> </textarea> <!--En value debe ir el VIEW DATA-->
    <br />
    <input type="submit" value="Enviar" />
</form>

