
@{
    ViewBag.Title = "Registrarse";
}

<h2>Registrate</h2>

<h2> @ViewBag.ErrorRegistro</h2> <!--Aqui se indican los errores que existieron-->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="jquery-1.9.1.min.js"></script>
<script src="jquery.validate.js"></script>
<script src="/formulario.js"></script>
<link href="/style.css" rel="stylesheet">
<script src="/validator.js"></script>



<form data-toggle="validator" role="form" method="POST" id="formulario-registro">
    <div class="form-group">
        <label class="control-label" for="nombre">Nombre: </label>
        <input class="form-control" type="text" pattern="^([_A-z0-9]){3,}$" maxlength="20" name="nombre" placeholder="Ingresa Nombre" required /> <!--En value debe ir el VIEW DATA-->
        <span class="help-block with-errors"> Máximo 20 caracteres,numeros y guion bajo</span>
    </div>

    <div class="form-group">

        <label class="control-label" for="contrasenna">Contraseña </label>
        <input class="form-control" data-toggle="validator" data-minlength="6" id="inputpassword" type="password" placeholder="Contrasenna" name="contrasenna" required />

        <span class="help-block">6 caracteres minimo </span>

    </div>
    <div class="form-group">
        <label class="control-label" for="repetircontrasenna">Repetir Contraseña </label>
        <input class="form-control" data-toggle="validator" data-minlength="6" data-match="#inputpassword" data-match-error="Whoops!. Las contrasennas no coinciden" placeholder="Repetir contrasenna" type="password" name="repetircontrasenna" required />

        <div class="help-block with-errors"></div>
    </div>

    <div class="form-group">
        <label class="control-label" for="fechadenacimiento">Fecha de Nacimiento </label> <!-- Arreglar esto, debe ser un calendario o algo-->
        <input type="date" class="form-control" name="fechadenacimiento" required />

    </div>

    <div class="form-group">
        <label class="control-label" for="sexo">Sexo </label>
        <input class="form-control" type="text" name="sexo" required />
        <p class="help-block">Si eres hombre ingresa "male", de lo contrario "female".</p>


    </div>
    <div class="form-group">
        <label class="control-label" for="avatarurl">Avatar Url </label>
        <input class="form-control" type="url" name="avatarurl" required/>
        <p class="help-block">Ingresar url de foto de la forma http://....</p>


    </div>
    <div>
       
        <button type="submit" class="btn btn-primary"  > Enviar </button>


        
    </div>

</form>



