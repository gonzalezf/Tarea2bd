
@{
    ViewBag.Title = "Perfil";
}

<h2>Perfil</h2> 

<div class="InfoUsuario">
  

    
    <ul>

        @foreach (var usuario in ViewBag.InfoUsuario)
        {
                if(int.Parse( (String) Session["GroupId"]) == 1 || int.Parse(@usuario.id_usuario) == int.Parse( (String) Session["UserId"]))
                {
                    <a href="/EditarPerfil/Index/@usuario.id_usuario/@usuario.avatar_url/@usuario.fecha_nacimiento" > Editar Perfil</a>
                }
                
                
                @ViewBag.UrlUsuario
                <li>
                    <img src="@usuario.avatar_url" alt="@usuario.nombre" width="120" height="120">
                </li>
         
                        <li>
                     Grupo Usuario:  @usuario.id_grupo
                        </li>
                     
                        <li>
                           Nombre Usuario:  @usuario.nombre
                        </li>
                <li>
                 Cantidad de comentarios:    @usuario.cantidad_comentarios
                </li>
                <li>
                   Avatar Url:  @usuario.avatar_url
                </li>
                <li>
                  Fecha de nacimiento:   @usuario.fecha_nacimiento
                </li>
                <li>
                Sexo:     @usuario.sexo
                </li>
                <li>
                   Fecha de registro:  @usuario.fecha_registro
                </li>
               
     


        }

   
    </ul>


    <ul>

        @foreach (var tema in ViewBag.Ultimos5TemasCreados)
        {

            <li>
                Ultimos 5 Temas Creados
            </li>


            <li>
                Nombre:  @tema.nombre
            </li>

            <li>
                Descripcion:  @tema.descripcion
            </li>
            <li>
                Mensaje:    @tema.mensaje
            </li>

        }


    </ul>


    <ul>

        @foreach (var comentario in ViewBag.Ultimos5Comentarios)
        {

            <li>
                Ultimos 5 Comentarios
            </li>


            <li>
                Mensaje:  @comentario.mensaje
            </li>

        }


    </ul>




</div>